const loading = require('../utils/loading_util');

function beginLoading(title) {
    wx.showLoading({
        title: title,
    })
}

function endLoading() {
    setTimeout(function () {
        wx.hideLoading()
    }, 800)
}

function wrapLoading(fn, title) {
    let r = fn();
    if (!title) {
        title = '加载中，请稍后';
    }
    if (r instanceof Promise) {
        beginLoading(title);
        r.finally(endLoading);
    } else {
        console.error('只有 fn 的结果为 Promise 时才会启用进度框')
    }
}

module.exports = {
    begin: beginLoading,
    end: endLoading,
    wrap: wrapLoading,
}