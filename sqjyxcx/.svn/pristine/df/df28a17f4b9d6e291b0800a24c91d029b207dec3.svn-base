

const genderList = [
    '女', '男',
]

const UserRole = {
    // 求职者
    Recruitee: 0,
    // 招聘者
    Recruiter: 1,
    // 社区工作人员
    CommunityPersonel: 2,
}

const userRoleName = [
    '求职者',
    '招聘方',
    '社区工作人员'
];



class Salary {
    constructor(min, max) {
        this.min = min;
        this.max = max;
        if (min <= 0 && max <= 0) {
            this.value = '薪资面议';
        } else if (min <= 0 && max > 0) {
            this.value = `${max}以下`;
        } else if (min > 0 && max <= 0) {
            this.value = `${min}以上`;
        } else {
            this.value = `${min} - ${max}`;
        }

    }
}

module.exports = {
    userRoleName: userRoleName,
    UserRole: UserRole,
    genderList: genderList,
    Salary: Salary,
}
