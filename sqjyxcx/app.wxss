.container{display: block;position: relative;}
/* 宽度 */
.wid54{width: 54%;}
.wid43{width: 43%;}
.wid50{width: 50;}
.wid48{width: 48%;}
.wid47{width: 47%;}
.wid90{width: 90%;margin: 0 auto;}
.wid95{width: 95%;margin: 0 auto;}
/* 浮动 */
.ft{float: left;}
.fr{float: right;}
.clearfloat::after{content: '';display: block;clear: both;}

.imgwd100{width: 100%;}
.zqsq{width: 93%;margin:0 auto;margin-top: 32px;}
/* 10px */
.line10{height: 10px;background: #F5F5F5;}
.line15{height: 15px;background: #F5F5F5;}
.line20{height: 20px;background: #F5F5F5;}
