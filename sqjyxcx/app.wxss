.margin_b10{margin-bottom: 10px;}


/* 按钮提交申请 */
.sqbox{height: 61px;background: #FFFFFF;box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);opacity: 1;}
.tijsq{height: 46px;background: #4376E4;opacity: 1;border-radius: 4px;width: 94%;margin: 0 auto;color: #FFFFFF;text-align: center;
line-height: 46px;margin-top: 17px;}
.btnboxbtm0{position: fixed;bottom: 0px;left: 0;right: 0;background: #fff;padding-bottom: 10px;}


/* 遮罩层 */
.zzc{
  width: 100%;height: 100%;background: #000000;
  opacity: 0.3;position: fixed;z-index: 99990;top: 0;
}
.zzc1{
  width: 100%;height: 100%;background: #000000;
  opacity: 0.3;position: fixed;z-index: 99990;top: 0;
}
/* 遮罩层上面的悬浮层 */
.sxbox{
	position: fixed;top: 0;left: 0;right: 0;width: 100%;background: #fff;z-index: 99991;
}



